<div class='card'>
  <div class='card-body'>
    <% if @user == current_user %>
      <a href='/users/<%= @user.resource_id %>/edit'>Edit</a>
    <% end %>
    <h1><i class="fas fa-user-astronaut"></i> <%= @user.nickname %></h1>

    <h3>Total Donations: <%= @user.donations.count %></h3>
    <h3>Total Amount Donated: <%= MoneyHelper.format_amount(@user.total_donated_amount) %></h3>

    <% if @user == current_user %>
      <ul>
        <% @user.donations.each do |donation| %>
          <li><%= donation.resource_id %></li>
        <% end %>
      </ul>
    <% end %>
    
  </div>
</div>
